<div data-section-id="{{ section.id }}" data-section-type="section-banner-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v4 mt-all">
    <div class="row" style="background-color:{{section.settings.bg_banner}};max-width: 100%;margin: 0 auto;">
      <div class="col-12 elementor-container">
        <div class="content text-center">
          {% if section.settings.sub_title_banner != blank %}
          <p class="sub-title" style="color: {{section.settings.color_sub_title}}">{{section.settings.sub_title_banner}}</p>
          {% endif %}
          {% if section.settings.title_banner != blank %}
          <h3 class="title-banner" style="color: {{section.settings.color_title}}">{{section.settings.title_banner}}</h3>
          {% endif %}
          <div class="qodef-m-line"></div>
        </div>
      </div>
    </div>
    <div class="container container-v2">
      <div class="row elementor-section">
        <div class="col-12 col-md-6 col-lg-3" style="padding: 0 30px;">
          <div class="qodef-e-image">
            <a href="{{section.settings.url_banner}}">
              {% if section.settings.img_banner1 != blank %}
              <img data-src="{{section.settings.img_banner1 | img_url : 'master'}}" class="lazyload img-fluid w-100" alt >
              {% else %}
              <img data-src="//via.placeholder.com/800x1078" class="lazyload img-fluid w-100" alt>
              {% endif %}
            </a>
          </div>
          <div class="qodef-e-content">
            {% if section.settings.title_banner2 != blank %}
            <h4 class="title-banner" style="color: {{section.settings.color_title2}}">{{section.settings.title_banner2}}</h4>
            {% endif %}
            {% if section.settings.sub_title_banner2 != blank %}
            <h6 class="sub-title" style="color: {{section.settings.color_sub_title2}}">{{section.settings.sub_title_banner2}}</h6>
            {% endif %}
          </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3" style="padding: 0 30px;">
          <div class="qodef-e-image">
            <a href="{{section.settings.url_banner}}">
              {% if section.settings.img_banner2 != blank %}
