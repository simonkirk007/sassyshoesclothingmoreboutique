<div data-section-id="{{ section.id }}" data-section-type="section-product-v7" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-product-v7 mt-all">
    <div class="lazyload">
      <div class="container container-v2">
        <div class="text-center">
          {% if section.settings.title_section_product != blank%}
          <h3 class="block-title title_heading" style="color : {{section.settings.color_title}}">{{section.settings.title_section_product}}</h3>        
          {% endif %}
        </div>
        <div class="row ">
          <div class="{% if section.settings.section_layout == "banner_left" %}col-lg-4 order-1{% elsif section.settings.section_layout == "banner_right" %} order-2 col-lg-4 {% endif %}">
            <div class="box-info">
              <div class="box-img">
                {% if section.settings.img_banner1 != blank %}
                <a href="{{section.settings.url_banner_1}}"> <img data-src="{{section.settings.img_banner1 | img_url:'master'}}" class="lazyload img-fluid w-100"></a>
                {% else %}
                <a href="{{section.settings.url_banner_1}}"> <img data-src="//via.placeholder.com/555x500" class="lazyload img-fluid w-100" alt=""></a>
                {% endif %}
              </div>
              <div class="content-banner">
                {% if section.settings.title_1 != blank %}
                <h3 class="title mb-0">{{section.settings.title_1}}</h3>
                {% endif %}
                {% if section.settings.sub-title1 != blank %}
                <span class="sub-title">
                  {{section.settings.sub-title1}}
                </span>
                {% endif %}
                <div class="info-bottom"> 
                  {% if section.settings.button_1 != blank %}
                  <a href="{{section.settings.url_banner_1}}" class="button-shop">{{section.settings.button_1}}</a>
                  {% endif %}
                </div>
              </div> 
            </div>
          </div>
          <div class="{% if section.settings.section_layout == "banner_left" %}col-md-8 order-2 {% elsif section.settings.section_layout == "banner_right" %} order-1 col-lg-8{% endif %}">
            <div class="row">   
              {% assign products_limit = section.settings.products_limit %}
              {% assign col = section.settings.select_collection %}
              {% for product in collections[col].products limit: products_limit %}
              <div class="col-md-4 col-12 product_item">
                {% include 'product-item-v1' %}
              </div>
              {% else %}
              {% for i in (1..products_limit) %}
              <div class="col-md-4 col-12 product_item">
                {% include 'empty-product-item' %}
              </div>
              {% endfor %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "PRODUCT V7",
  "settings": [
  {
      "type": "header",
      "content": "Product 7"
    },
    {
      "type": "select",
      "id": "section_layout",
      "label": "Section Layout",
      "options": [
        {
          "value": "banner_left",
          "label": "Banner Left"
        },
        {
          "value": "banner_right",
          "label": "Banner Right"
        }
      ],
      "default": "banner_left"
    },
    {
      "type": "header",
      "content": "Banner 1"
    },
    {
      "type": "text",
      "id": "title_section_product",
      "label": "Title section Product",
      "default": "New Arrivals"
    },
    {
      "type": "color",
      "id": "color_title",
      "label": "Color Title"
    },
    {
      "type": "image_picker",
      "id": "img_banner1",
      "label": "Image",
      "info": "555 x 500px recommended"
    },
    {
      "type": "url",
      "id": "url_banner_1",
      "label": "URL button banner 1",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Title banner 1",
      "default": "The Edit: Autumn Jackets"
    },
    {
      "type": "text",
      "id": "sub-title1",
      "label": "sub title 1",
      "default": "Your transeasonal saviour"
    },
    {
      "type": "text",
      "id": "button_1",
      "label": "button 1",
      "default": "Shop now"
    },
    {
      "type": "header",
      "content": "Info Product"
    },
    {
      "type": "collection",
      "id": "select_collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Limit products",
      "min": 2,
      "max": 50,
      "step": 1,
      "default": 3
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "PRODUCT V7",
      "category": "HOME"
    }
  ]
}
{% endschema %}

